{% extends "base.html.twig" %}

{% block content %}
	<div class="text-center">
		<h1 class="text-5xl">{{ code ?? 404}}</h1>
		<h2>{{message ?? "Ha fallat alguna cosa"}}</h2>
	</div>
	{% if displayErrorDetails %}
		<div class="text-center">
			{{ error|json_encode(constant('JSON_PRETTY_PRINT')) }}
		</div>
	{% endif %}

{% endblock %}
