<!DOCTYPE html>
<html lang="ca">
	<head>
		{% block head %}
			<meta charset="utf-8">
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<title>{{ titol }}</title>
			<link rel="icon" type="image/ico" href="{{basePath}}/logo.ico"/>
			<link rel="stylesheet" type="text/css" href="{{basePath}}/css/kartalit.css">
		{% endblock %}
	</head>
	<body class="bg-klit text-klit-text">
		<div id="header">
			{% block header %}
				{{ include("./Components/header.html.twig") }}
			{% endblock %}
		</div>
		<div id="content" class="px-5 sm:px-10 md:px-30 lg:px-50 xl:px-75 mt-10"> {% block content %}{% endblock %}
			</div>
			<div id="footer" class="text-xs text-center fixed bottom-0 left-0 w-full p-2">
				{% block footer %}
					<p>Kartalit -
						{{"now"|date("Y")}}</p>
				{% endblock %}
			</div>
			{% block js %}{% endblock %}
		</body>
	</html>
