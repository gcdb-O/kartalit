<header id="header" class="bg-klit-dark w-full text-white flex justify-between items-center">
	<div class="hidden sm:inline-block">
		<a href="{{basePath}}"><img src="{{basePath}}/img/kartalit_logo.png" alt="Logo Kartalit" class="w-32 ml-1 sm:ml-5"></a>
	</div>
	<div class="w-1/3 lg:w-1/2 ml-5 lg:ml-30 flex">
		{% include "Components/buscador.html.twig" %}
	</div>
	<nav>
		<ul class="list-none text-white">
			<li class="header-item block float-left relative">
				<a href="{{basePath}}/llibre/tots">Tots els llibres</a>
			</li>
			{% if usuari == null %}
				<li class="header-item block float-right relative">
					<a href="{{basePath}}/login">Inicia sessió</a>
				</li>
			{% else %}
				<li id="desplegable" class="header-item block float-right relative mr-2">
					<a href="javascript:void(0)">{{ usuari.usuari }}</a>
					<ul class="absolute bg-klit-dark mt-3 -mr-2 right-0 w-max hidden">
						<li class="header-item">
							<a href="{{basePath}}/perfil">Perfil</a>
						</li>
						<li class="header-item">
							<a href="{{basePath}}/mapa-literari">Mapa Literari</a>
						</li>
						<li class="header-item">
							<a href="{{basePath}}/api/auth/logout" title="Tanca la sessió">Tanca la sessió</a>
						</li>
					</ul>
				</li>
			{% endif %}
		</ul>
	</nav>
</header>
